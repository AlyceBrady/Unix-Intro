# Linux-specific aliases
alias ls='ls --color=auto'
# alias ls='LC_ALL=C ls --color=auto'
#   (LC_ALL=C invokes the traditional POSIX sorting order)
alias l='ls -aF'

# SYSADMIN-type aliases

# Distribution-specific aliases for updating software and managing
# apache services
case $(lsb_release -i | awk '{ print $3 }') in
Ubuntu|Debian)
    alias apt-get="sudo apt-get"
    alias updatey="sudo apt-get â€“yes"
    alias update='sudo apt-get update && sudo apt-get upgrade'
    if [ $UID -ne 0 ]; then
        alias a2dissite='sudo a2dissite'
        alias a2dismod='sudo a2dismod'
        alias a2ensite='sudo a2ensite'
        alias a2enmod='sudo a2enmod'
        alias apachectl='sudo service apache2'
        alias service='sudo service'
    fi
    ;;
CentOS|RedHatEnterpriseServer)
    alias update='yum update'
    alias updatey='yum -y update'
    ;;
esac

alias ports='netstat -tulanp'

## pass options to free ## 
alias meminfo='free -m -l -t'

## get top process eating memory
alias psmem='ps auxf | sort -nr -k 4'
alias psmem10='ps auxf | sort -nr -k 4 | head -10'

## get top process eating cpu ##
alias pscpu='ps auxf | sort -nr -k 3'
alias pscpu10='ps auxf | sort -nr -k 3 | head -10'

## Get server cpu info ##
alias cpuinfo='lscpu'

## older system use /proc/cpuinfo ##
## alias cpuinfo='less /proc/cpuinfo' ##

## get GPU ram on desktop / laptop running X ## 
alias gpumeminfo='grep -i --color memory /var/log/Xorg.0.log'

